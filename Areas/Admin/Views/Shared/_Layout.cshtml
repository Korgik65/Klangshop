<!DOCTYPE html>
<html lang="uk">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> Admin-Area | @ViewBag.Title</title>
    <link rel="icon" type="image/x-icon" href="~/Images1/logo.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>
    <script src="~/Scripts/jquery-3.6.3.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <link href="~/Content/main2.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" data-bs-theme="dark">
            <div class="container-fluid">
                <img src="~/Images1/logo.png" alt="Logo" width="30" height="30" class="d-inline-block align-text-top">
                <div style="padding-left: 10px">
                    @Html.ActionLink("Admin Area", "Index", "Products", new { area = "Admin" }, htmlAttributes: new { @class = "navbar-brand" })
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (ViewBag.Title == "Товари")
                        {
                            <li class="nav-item d-flex align-items-center">
                                @Html.ActionLink("Головна", "Main", "Klangshop", new { area = "" }, htmlAttributes: new { @class = "nav-link" })
                            </li>
                            <li class="nav-item d-flex align-items-center">
                                @Html.ActionLink("Товари", "Index", "Products", new { area = "Admin" }, htmlAttributes: new { @class = "nav-link active" })
                            </li>
                            <li class="nav-item d-flex align-items-center">
                                @Html.ActionLink("Замовлення", "Index", "AllOrders", new { area = "Admin" }, htmlAttributes: new { @class = "nav-link" })
                            </li>
                        }
                        else if (ViewBag.Title == "Додати товар")
                        {
                            <li class="nav-item d-flex align-items-center">
                                @Html.ActionLink("Головна", "Main", "Klangshop", new { area = "" }, htmlAttributes: new { @class = "nav-link" })
                            </li>
                            <li class="nav-item d-flex align-items-center">
                                @Html.ActionLink("Товари", "Index", "Products", new { area = "Admin" }, htmlAttributes: new { @class = "nav-link active" })
                            </li>
                            <li class="nav-item d-flex align-items-center">
                                @Html.ActionLink("Замовлення", "Index", "AllOrders", new { area = "Admin" }, htmlAttributes: new { @class = "nav-link" })
                            </li>
                        }
                        else if (ViewBag.Title == "Редагувати товар")
                        {
                            <li class="nav-item d-flex align-items-center">
                                @Html.ActionLink("Головна", "Main", "Klangshop", new { area = "" }, htmlAttributes: new { @class = "nav-link" })
                            </li>
                            <li class="nav-item d-flex align-items-center">
                                @Html.ActionLink("Товари", "Index", "Products", new { area = "Admin" }, htmlAttributes: new { @class = "nav-link active" })
                            </li>
                            <li class="nav-item d-flex align-items-center">
                                @Html.ActionLink("Замовлення", "Index", "AllOrders", new { area = "Admin" }, htmlAttributes: new { @class = "nav-link" })
                            </li>
                        }
                        else if (ViewBag.Title == "Список замовлень")
                        {
                            <li class="nav-item d-flex align-items-center">
                                @Html.ActionLink("Головна", "Main", "Klangshop", new { area = "" }, htmlAttributes: new { @class = "nav-link" })
                            </li>
                            <li class="nav-item d-flex align-items-center">
                                @Html.ActionLink("Товари", "Index", "Products", new { area = "Admin" }, htmlAttributes: new { @class = "nav-link" })
                            </li>
                            <li class="nav-item d-flex align-items-center">
                                @Html.ActionLink("Замовлення", "Index", "AllOrders", new { area = "Admin" }, htmlAttributes: new { @class = "nav-link active" })
                            </li>
                        }
                    </ul>
                    @RenderSection("Search", false)
                </div>
            </div>
        </nav>
    </header>
    @RenderBody()
    <footer>@RenderSection("Footer", false)</footer>
    @RenderSection("scripts", false)
</body>

</html>