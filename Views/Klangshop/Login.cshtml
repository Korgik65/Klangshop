    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <br /><br />
            <div class="py-5 text-center">
                <img class="mx-auto mb-4" src="~/Images1/login-ico.png" alt="Реєстрація" width="80" height="80">
                <h1 class="fw-light">Авторизація</h1>
            </div>

            <div class="form-signin w-100 m-auto">
                @if (TempData["SM"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SM"]
                    </div>
                }

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-floating">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "email", @id = "floatingInput", @placeholder = "name@example.com" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    <label for="floatingInput">Електронна пошта</label>
                </div>

                <div class="form-floating">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password", @id = "floatingPassword", @placeholder = "Password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    <label for="floatingPassword">Пароль</label>
                </div>

                <div class="mb-3 text-center">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.RememberMe)
                        @Html.LabelFor(model => model.RememberMe, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <label>
                        <p>| @Html.ActionLink("Реєстрація", "Create-Account")</p>
                    </label>
                </div>

                <br />
                <div>
                    <input type="submit" value="Увійти" class="w-100 btn btn-lg btn-primary" />
                </div>
            </div>
        }
    </div>
</main>

